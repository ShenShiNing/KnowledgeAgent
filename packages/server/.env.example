# Database
DATABASE_URL=mysql://username:password@localhost:3306/knowledge_agent
# Test Database (can use same database for testing or separate one)
TEST_DATABASE_URL=mysql://username:password@localhost:3306/knowledge_agent_test
# Test API Base URL (default: http://localhost:3000)
TEST_BASE_URL=http://localhost:3000

# Server
PORT=3000
NODE_ENV=development

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_ISSUER=knowledge-agent
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY_DAYS=7

# Password Hashing
BCRYPT_SALT_ROUNDS=12

# Cleanup
TOKEN_CLEANUP_INTERVAL_MS=3600000

# Rate Limiting
# Set to true to disable rate limiting (useful for testing)
DISABLE_RATE_LIMIT=false

# AI API Keys (Optional - for future use)
OPENAI_API_KEY=
OPENROUTER_API_KEY=